[
  { "type": "scene", "id": "ch2_s1", "title": "Safe for Now" },
  { "type": "bg", "value": "Icy cove, gentle wind, soft snow shifting" },
  { "type": "music", "value": "Calm, hopeful arctic theme", "volume": 0.22 },

  {
    "type": "line",
    "speaker": "NARRATOR",
    "lang": "en",
    "text": "The icy wind whooshed gently across the frozen cove as the PAW Patrol gathered around the rescued baby penguin, wrapped snugly in Everest’s warm blanket."
  },
  { "type": "sfx", "value": "soft baby penguin peeps" },

  { "type": "line", "speaker": "SKYE", "lang": "en", "text": "Aww… she’s shaking a little." },
  { "type": "line", "speaker": "EVEREST", "lang": "en", "text": "She’s safe for now, but we’ve gotta find her parents—fast." },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "سلام کوچولو.",
    "transliteration": "Salâm kucheloo.",
    "gloss_en": "Hello, little one."
  },

  { "type": "line", "speaker": "NARRATOR", "lang": "en", "text": "The baby penguin tilted her head." },
  { "type": "line", "speaker": "MARSHALL", "lang": "en", "text": "I think she likes him!" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "en",
    "text": "Let’s practice together. Salâm means hello."
  },
  {
    "type": "line",
    "speaker": "ALL_PUPS",
    "lang": "fa",
    "text": "سلام!",
    "transliteration": "Salâm!"
  },
  { "type": "sfx", "value": "happy baby penguin chirp" },

  {
    "type": "line",
    "speaker": "RYDER",
    "lang": "en",
    "text": "Pouya, do you know where her family might be?"
  },
  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "en",
    "text": "Penguin parents often fish nearby. We should look for footprints."
  },
  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "ردِ پا.",
    "transliteration": "Rad-e pâ.",
    "gloss_en": "Footprints."
  },

  { "type": "line", "speaker": "ROCKY", "lang": "fa", "text": "ردِ پا!", "transliteration": "Rad-e pâ!" },
  { "type": "line", "speaker": "ROCKY", "lang": "en", "text": "Tracks! I’m good at finding trails." },

  { "type": "scene", "id": "ch2_s2", "title": "Search Begins" },
  { "type": "bg", "value": "Wide icy plain, distant wind" },

  { "type": "line", "speaker": "CHASE", "lang": "en", "text": "I’ll scan the area for movement and tracks." },
  { "type": "line", "speaker": "RYDER", "lang": "en", "text": "Good thinking. Skye, take to the air. Zuma, check the water channels." },

  { "type": "line", "speaker": "RUBBLE", "lang": "en", "text": "Rubble on the double!" },
  { "type": "line", "speaker": "MARSHALL", "lang": "en", "text": "I’ll try not to slip!" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "من با تو می‌آیم.",
    "transliteration": "Man bâ to miâyam.",
    "gloss_en": "I will come with you."
  },

  {
    "type": "line",
    "speaker": "RYDER",
    "lang": "fa",
    "text": "من رایدر هستم.",
    "transliteration": "Man Ryder hastam.",
    "gloss_en": "I am Ryder."
  },
  { "type": "line", "speaker": "POUYA", "lang": "en", "text": "Very good!" },

  { "type": "scene", "id": "ch2_s3", "title": "Discovery from Above" },
  { "type": "bg", "value": "Open sky, flapping wings" },
  { "type": "sfx", "value": "Skye flying, light wind rush" },

  {
    "type": "line",
    "speaker": "SKYE",
    "lang": "en",
    "text": "I see tracks! Small ones—and bigger ones too! They lead toward the ice caves!"
  },
  {
    "type": "line",
    "speaker": "CHASE",
    "lang": "en",
    "text": "Confirmed. Two adult penguins moving near the caves."
  },
  { "type": "line", "speaker": "EVEREST", "lang": "en", "text": "Ice caves can be tricky." },

  { "type": "scene", "id": "ch2_s4", "title": "Hungry Penguin" },
  { "type": "bg", "value": "Quiet ice path, gentle footsteps" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "او گرسنه است.",
    "transliteration": "U gorsneh ast.",
    "gloss_en": "She is hungry."
  },
  {
    "type": "line",
    "speaker": "SKYE",
    "lang": "fa",
    "text": "او گرسنه است.",
    "transliteration": "U gorsneh ast."
  },

  { "type": "line", "speaker": "MARSHALL", "lang": "en", "text": "I know that feeling!" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "en",
    "text": "U means she. Ast means is."
  },
  {
    "type": "line",
    "speaker": "ALL_PUPS",
    "lang": "fa",
    "text": "او… است.",
    "transliteration": "U… ast."
  },

  { "type": "sfx", "value": "fish snack crunching" },
  { "type": "line", "speaker": "NARRATOR", "lang": "en", "text": "Zuma offered a fish snack, and the baby penguin gobbled happily." },

  { "type": "scene", "id": "ch2_s5", "title": "Ice Cave Trouble" },
  { "type": "bg", "value": "Echoing ice cave, dripping water" },
  { "type": "sfx", "value": "ice rumble, distant crack" },

  { "type": "line", "speaker": "RUBBLE", "lang": "en", "text": "That cave’s unstable!" },
  { "type": "line", "speaker": "ROCKY", "lang": "en", "text": "I can brace it with recycled supports!" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "شما خیلی باهوش هستید.",
    "transliteration": "Shomâ kheili bâhoosh hastid.",
    "gloss_en": "You are very smart."
  },

  { "type": "line", "speaker": "CHASE", "lang": "en", "text": "What does shomâ mean?" },
  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "en",
    "text": "Shomâ means you—polite or more than one. To is for one person."
  },
  {
    "type": "line",
    "speaker": "ALL_PUPS",
    "lang": "fa",
    "text": "شما!",
    "transliteration": "Shomâ!"
  },

  { "type": "scene", "id": "ch2_s6", "title": "Parents Found" },
  { "type": "bg", "value": "Ice cave clearing, rushing water" },
  { "type": "sfx", "value": "water rushing, ice shifting" },

  { "type": "line", "speaker": "SKYE", "lang": "en", "text": "I hear them!" },
  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "مادر و پدر.",
    "transliteration": "Mâdar va pedar.",
    "gloss_en": "Mother and father."
  },

  { "type": "sfx", "value": "excited penguin calls" },
  { "type": "line", "speaker": "ZUMA", "lang": "en", "text": "Fast water—parents are trapped!" },

  { "type": "line", "speaker": "RUBBLE", "lang": "en", "text": "I’ll build a bridge!" },
  { "type": "line", "speaker": "ROCKY", "lang": "en", "text": "I’ll anchor it!" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "نگران نباش.",
    "transliteration": "Negarân nabâsh.",
    "gloss_en": "Don’t worry. (singular)"
  },
  {
    "type": "line",
    "speaker": "ALL_PUPS",
    "lang": "fa",
    "text": "نگران نباش!",
    "transliteration": "Negarân nabâsh!"
  },

  { "type": "sfx", "value": "bridge locking into place" },

  {
    "type": "line",
    "speaker": "NARRATOR",
    "lang": "en",
    "text": "With a final click, the bridge held. The water slowed, and the parents waddled across."
  },
  { "type": "sfx", "value": "happy penguin reunion chirps" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "ما موفق شدیم.",
    "transliteration": "Mâ movafagh shodim.",
    "gloss_en": "We succeeded."
  },
  {
    "type": "line",
    "speaker": "RYDER",
    "lang": "fa",
    "text": "ما موفق شدیم.",
    "transliteration": "Mâ movafagh shodim."
  },

  { "type": "performance", "value": "CHEER" },

  {
    "type": "line",
    "speaker": "POUYA",
    "lang": "fa",
    "text": "دوستان.",
    "transliteration": "Doustân.",
    "gloss_en": "Friends."
  },
  {
    "type": "line",
    "speaker": "ALL_PUPS",
    "lang": "fa",
    "text": "دوستان!",
    "transliteration": "Doustân!"
  },

  {
    "type": "line",
    "speaker": "NARRATOR",
    "lang": "en",
    "text": "As the sun dipped low, the PAW Patrol headed home, ready for the final part of their adventure."
  },

  { "type": "music", "value": "Warm, hopeful outro", "volume": 0.26 },
  { "type": "line", "speaker": "NARRATOR", "lang": "en", "text": "To be continued in Chapter 3: A Goodbye That Means See You Soon!" },
  { "type": "end", "value": "END_CHAPTER_2" }
]

